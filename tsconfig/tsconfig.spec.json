/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "noEmitHelpers": true, // this need true for unit test
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "../src/test.ts",
    "../src/polyfills.ts"
  ],
  "include": [
    "../src/**/*.spec.ts",
    "src/**/*.spec.ts",
    "../src/**/*.d.ts",
    "src/**/*.d.ts",
    "../src/**/*.dot-env.*",
    "src/**/*.dot-env.*",
    "../src/**/*.dot-env.run.*",
    "src/**/*.dot-env.run.*"
  ],
  "exclude": [
    "../src/dot-env/loader.dot-env.run.*"
  ]
}
